---
import type { HTMLAttributes } from 'astro/types'

type CustomProps = {
  rounded?: boolean
}

type Props = HTMLAttributes<'select'> & CustomProps

const { rounded, ...rest } = Astro.props
---

<select
  {...rest}
  class:list={[
    'bg-transparent border border-eerie-black px-2.5 py-1',
    rounded && 'rounded-[1.25rem]',
  ]}
>
  <slot />
</select>
