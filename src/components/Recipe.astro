---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'
import Button from 'components/Button.astro'
import Tag from 'components/Tag.astro'

const getMoment = (moment: 'midday') => {
  if (moment === 'midday') {
    return 'Tarde | Noche'
  }

  return ''
}

const getDifficulty = (difficulty: 'easy') => {
  if (difficulty === 'easy') {
    return 'Fácil'
  }

  return ''
}

interface Props {
  title: string
  heading?: string
  description: string
  class?: string
  img: {
    path: string | ImageMetadata
    alt: string
  }
  link: string
  difficulty?: 'easy'
  moment?: 'midday'
}

const {
  class: className,
  title,
  heading = 'NUESTROS COCTELES',
  description,
  difficulty,
  moment,
  img,
  link,
} = Astro.props
const difficultyI18n = getDifficulty(difficulty ?? 'easy')
const momentI18n = getMoment(moment ?? 'midday')
---

<div class:list={['grid grid-cols-[auto_65%] gap-[2.25rem]', className]}>
  <Picture
    height="420"
    class="aspect-[2/3] h-[420px] w-full object-cover object-center"
    formats={['webp', 'avif', 'jpeg']}
    src={img.path}
    alt={img.alt}
  />
  <div class="grid grid-rows-[auto_1fr] gap-3.5">
    <h1
      class="border border-eerie-black px-6 py-[0.75rem] text-left text-4xl uppercase text-eerie-black"
    >
      {heading}
    </h1>
    <div
      class="grid grid-rows-[auto_1fr_auto] gap-y-3 border border-eerie-black px-6 py-[0.75rem]"
    >
      <h2
        class="row-start-1 justify-self-start text-left text-2xl uppercase text-rosewood"
      >
        {title}
      </h2>
      <div class="row-start-2">
        <p class="mb-3 text-base text-eerie-black">{description}</p>
        <div class="flex gap-4">
          <Button as="a" href={link}>Ver Receta</Button>
          <Button as="a" variant="outline" href="/history"
            >De Cajón Vodka</Button
          >
        </div>
      </div>
      <div
        class="row-start-3 grid grid-cols-[min-content_min-content] grid-rows-[auto_auto] gap-x-6 gap-y-2"
      >
        <h2 class="col-start-1 text-sm uppercase text-rosewood">Dificultad</h2>
        <h2 class="col-start-2 text-sm uppercase text-rosewood">Ocasión</h2>
        <Tag class="row-start-2 justify-self-start">{difficultyI18n}</Tag>
        <Tag class="row-start-2 justify-self-start">{momentI18n}</Tag>
      </div>
    </div>
  </div>
</div>
