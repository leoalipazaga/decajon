---
import type { HTMLAttributes } from 'astro/types'

type CustomProps = {
  rounded?: boolean
}

type Props = HTMLAttributes<'input'> & CustomProps

const { rounded, ...rest } = Astro.props
---

<input
  class:list={[
    'bg-transparent border border-eerie-black px-2.5 py-1',
    rounded && 'rounded-[1.25rem]',
    rest.type === 'search' && 'placeholder:text-center',
  ]}
  type="text"
  {...rest}
/>
