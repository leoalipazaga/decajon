---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

interface Props {
  banner: { alt: string; src: ImageMetadata }
  bottom: { alt: string; src: ImageMetadata }[]
}

const { banner, bottom } = Astro.props
---

<article class="grid grid-cols-3 gap-x-4 gap-y-5">
  <Picture
    alt={banner.alt}
    src={banner.src}
    loading="lazy"
    pictureAttributes={{ class: 'col-span-3' }}
    formats={['webp', 'avif', 'jpg']}
    class="m-auto aspect-square md:w-full"
  />
  {
    bottom.map((img) => (
      <Picture
        alt={img.alt}
        src={img.src}
        loading="lazy"
        pictureAttributes={{ class: 'col-span-1' }}
        formats={['webp', 'avif', 'jpeg']}
        class="m-auto aspect-square md:w-full"
      />
    ))
  }
</article>
